{{#if user}}

<h2>Welcome, {{user.name}} {{user.surname}}</h2>

<div class="container">
    <div class="row">
        <div class="col">
            <div>
                <a class="btn btn-danger" style ="padding: 10px" href="/userProfile">Reload the page</a>
                <form id="logout-form" style ="padding: 10px" action="/auth/logout" method="POST">
                    <button class="btn btn-danger">Logout</button>
                </form>
            </div>
        </div>
        <div class="col">
            <table></table>
        </div>
    </div>
</div>

{{#if userInSession}}
  <h2>Welcome, {{ userInSession.username }}!</h2>
  <p>The user session is defintely working</p>
  <button>
    <a href="/user-profile">Reload the page</a>
  </button>
{{else}}
  
  <br><p>Still no logged in user, sorry!</p>
 
{{/if}}



{{else}}
<h2>Sorry! You are not logged in yet</h2>
{{/if}}